.link-container
  display: grid
  grid-template-columns: 50% 50%
  margin-top: 30px

.link-item
  display: flex
  justify-content: flex-start
  margin-bottom: 20px
  margin-right: 30px

.link-item img
  width: 50px !important
  height: 50px !important
  margin: 0

.link-content
  display: flex
  flex-direction: column
  justify-content: center
  margin-left: 10px
  overflow: hidden
  white-space: nowrap

.blog-name
  font-size: 1rem
  font-weight: bold

@media screen and (max-width: 480px)
  .link-container
    grid-template-columns: repeat(1, 1fr);
